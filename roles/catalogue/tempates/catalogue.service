[Unit]
Description = Catalogue Service

[Service]
User=roboshop
Environment=MONGO=true
Environment=MONGO_URL="mongodb://{{lookup('amazon.aws.aws_ssm','docdb.{{env}}.endpoint',region='us-east-1')}}":27017 --sslCAFile /app/global-bundle.pem --username docdbadmin --password roboshop1234"
ExecStart=/bin/node /app/server.js
SyslogIdentifier=catalogue

[Install]
WantedBy=multi-user.target